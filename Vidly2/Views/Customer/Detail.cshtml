@model Vidly2.Models.Customer
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@{
    <ul>
        <li>
            <b>Membership Type:</b> @Model.MembershipType.Name
        </li>
        @if (Model.BirthDate.HasValue)
        {
            <li>
                <b>BirthDate:</b> @Model.BirthDate.Value.ToShortDateString() 
            </li>
        }
    </ul>
}

