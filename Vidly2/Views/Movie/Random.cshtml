@model  Vidly2.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>
@if (Model.Customers.Count < 2)
{
    <text> Not many have rented this movie. </text>
}
else
{
    <ul>
        @{
            foreach (var customer in Model.Customers)
            {
                <li>@customer.Name</li>
            }
        }
    </ul>
}



