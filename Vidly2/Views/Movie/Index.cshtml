@model Vidly2.ViewModel.GetMoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Movies List</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var movie in Model.Movies)
            {
                <tr class="table-light">
                    <td>@Html.ActionLink(movie.Name, "Detail", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        }
    </tbody>

</table>
